pipeline
{
   agent any
    stages
	{
      stage ('git clone')
	  { 
		steps 
		{ 
	     git 'https://github.com/sandesh421/maven-project' 
        }
      } 
     stage ('compile code')
	 {
      steps
		{
			withMaven(jdk: 'localjdk', maven: 'localmaven') {
			sh 'mvn compile'}
		}	
    
	}
     stage ('test the code')
	 {
		steps
		{
			withMaven(jdk: 'localjdk', maven: 'localmaven') {
			sh 'mvn test'}
	
		}
	}
	 stage ('Build the code')
	 {
		steps
		{
			withMaven(jdk: 'localjdk', maven: 'localmaven') {
			sh 'mvn package'}
	
		}
	}
}
}
